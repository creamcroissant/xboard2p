XBOARD_HTTP_ADDR=0.0.0.0:8080
XBOARD_SHUTDOWN_TIMEOUT=15s

XBOARD_LOG_LEVEL=info
XBOARD_LOG_FORMAT=json
XBOARD_LOG_ADD_SOURCE=false
XBOARD_ENV=development

XBOARD_DB_PATH=./data/xboard.db

XBOARD_AUTH_SIGNING_KEY=change-me
XBOARD_AUTH_TOKEN_TTL=24h
XBOARD_AUTH_ISSUER=xboard
XBOARD_AUTH_AUDIENCE=xboard-client
XBOARD_AUTH_LEEWAY=30s
XBOARD_AUTH_BCRYPT_COST=12

XBOARD_ADMIN_UI_ENABLED=true
XBOARD_ADMIN_UI_DIR=web/admin
XBOARD_ADMIN_UI_TITLE=XBoard Admin
XBOARD_ADMIN_UI_VERSION=go-dev
XBOARD_ADMIN_UI_LOGO=https://xboard.io/images/logo.png
# leave empty to auto-detect request origin
XBOARD_ADMIN_UI_BASE_URL=

XBOARD_INSTALL_UI_ENABLED=true
XBOARD_INSTALL_UI_DIR=web/install